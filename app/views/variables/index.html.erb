<h1>Listing variables</h1>

<table>
  <thead>
    <tr>
      <th>Prompt</th>
      <th>Name</th>
      <th>Validation type</th>
      <th>Validation</th>
      <th>Task</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @variables.each do |variable| %>
      <tr>
        <td><%= variable.prompt %></td>
        <td><%= variable.name %></td>
        <td><%= variable.validation_type %></td>
        <td><%= variable.validation %></td>
        <td><%= variable.task %></td>
        <td><%= link_to 'Show', variable %></td>
        <td><%= link_to 'Edit', edit_variable_path(variable) %></td>
        <td><%= link_to 'Destroy', variable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

