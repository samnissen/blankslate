<%= simple_form_for(@variable) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :prompt %>
    <%= f.input :name %>
    <%= f.input :validation_type %>
    <%= f.input :validation %>
    <%= f.association :task %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
