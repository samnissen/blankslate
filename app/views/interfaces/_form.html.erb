<%= form_for @interface, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group hide">
    <%= f.label :address, :class => 'control-label col-md-2 hide' %>
    <div class="col-md-10 hide">
      <%= f.text_field :address, :class => 'text-field form-control hide' %>
    </div>
  </div>
  <div class="form-group hide">
    <%= f.label :credentials, :class => 'control-label col-md-2 hide' %>
    <div class="col-md-10">
      <%= f.text_field :credentials, :class => 'text-field form-control hide' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  interfaces_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
