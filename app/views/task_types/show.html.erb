<%- model_class = TaskType -%>
<div class="page-header">
  <h1><%=t '.title', :default => TaskType %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @task_type.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:setup) %></dt>
      <dd><pre class="prettyprint"><%= @task_type.setup %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:teardown) %></dt>
      <dd><pre class="prettyprint"><%= @task_type.teardown %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              task_types_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_task_type_path(@task_type), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              task_type_path(@task_type),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

