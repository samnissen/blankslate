<h1>Listing missions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Class name</th>
      <th>Class code</th>
      <th>Variables</th>
      <th>Interface</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @missions.each do |mission| %>
      <tr>
        <td><%= mission.user %></td>
        <td><%= mission.class_name %></td>
        <td><%= mission.class_code %></td>
        <td><%= mission.variables %></td>
        <td><%= mission.interface %></td>
        <td><%= link_to 'Show', mission %></td>
        <td><%= link_to 'Edit', edit_mission_path(mission) %></td>
        <td><%= link_to 'Destroy', mission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mission', new_mission_path %>
